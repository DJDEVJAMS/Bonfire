{{!-- --Navbar-- --}}

<nav id="nav">
  {{! Header }}
  <div id="header-container">
    <header id="header">

    </header>
    <ul>

      <li><a href="/">Home</a></li>
      <li><a href="/pageOne">Page One</a></li>
      {{#if loggedIn}}
      <li><a href="#" id="logout">Logout</a></li>
      {{else}}
      <li><a href="/login">Login</a></li>
      {{/if}}
    </ul>
</nav>
</div>



<div>
  <div>
  <h1 style="text-align:center;" class="campfire">Welcome to the {{hobby_name}} Campfire!</h1>
  <section class="post-list">
    </div>

<div style="background-color: rgba(255, 253, 253, 0.9); color: #3b3b3b; border-radius: 8px; padding: 20px; border: 1px solid #cecdcd; box-shadow: 0 4px 8px rgba(3, 3, 3, 0.1);">
    {{#each posts}}
    <article class="post">
      <div class="post-votes">
        <button class="upvote">▲</button>
        <span class="vote-count">{{votes}}</span>
        <button class="downvote">▼</button>
      </div>
      <div class="post-content">
        <h2 style="text-align:center"><a style="color:black; text-align:center"class="post-title" href="/post/{{id}}">{{title}}</a></h2>
        <p style="text-align:right"class="post-meta">Posted by u/{{user.username}} on {{created_at}}</p>
        <div class="post-body">
          {{!-- FUTURE DEVELOPMENT}}
          {{!-- {{#if isImage}}
          <img src="{{imageUrl}}" alt="{{title}}">
          {{else}}
          {{/if}}--}}

          <p>{{{message}}}</p>
        </div>
        <div class="post-comments">
          {{!-- FUTURE DEVELOPMENT - CUSTOM HELPER FOR NUMBER OF COMMENTS --}}
          <a href="/post/{{id}}/comments"> 12 comments</a>
        </div>

    </article>
    {{/each}}
  </section>
  <div class="Post">
    <form id="new-Post-form">
      {{!-- <label form="Post">Start a new Post Here</label> --}}
      {{!-- <input type="text" id="post-title"></input>
      <input type="text" id="post-message"></input> --}}
      {{!-- <button type="submit" id="login-btn">Post</button> --}}

    <label form="Post" style="margin-bottom: 10px; color: #3d3d3d;">Start a new Post Here</label>
    <input type="text" id="post-title" style="width: 100%; padding: 10px; border-radius: 4px; border: 1px solid #d3d0d0;" rows="1" placeholder="Write your Post Title here..."></input>
    <textarea type="text" id="post-message" style="width: 100%; padding: 10px; border-radius: 4px; border: 1px solid #d3d0d0;" rows="4" placeholder="Write the first comment here..."></textarea>
    <button type="submit" id="login-btn" style="margin-top: 10px; padding: 10px 20px; background-color: #4b4a4a; color: #ffffff; border: none; border-radius: 4px; cursor: pointer;">Post</button>
    </form>
  </div>
  </div>
</div>
<script src="/js/hobby.js"></script>